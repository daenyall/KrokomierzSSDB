<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KrokomierzSSDB.MainPage"
             Title="">
    
    
    <!-- Ogółem to kolory pasuje coś ten, ja mam 2 lewe ręce do tego no nie to jakbyś miał pomysł jakiś czy coś to powiedz to mogę zrobić no nie 
    obrazek na przycisku tez się zmieni potem na cos innego pod kolor no nie tylko to ustalic trzeba -->

    <ContentView>
        <StackLayout >
            <Label 
                HorizontalOptions="Center" 
                Text="Dystans"
                FontSize="45"
                FontAttributes="Bold"
                />
            <Label 
                HorizontalOptions="Center" 
                Text="0.0" 
                x:Name="distanceLabel"
                FontSize="35"
                Margin="0,0,0,20"
                />
            <Label 
                HorizontalOptions="Center" 
                Text="Kroki"
                FontSize="45"
                FontAttributes="Bold"
                />
            <Label 
                HorizontalOptions="Center" 
                Text="0" 
                x:Name="stepsLabel"
                FontSize="35"
                Margin="0,0,0,40"
                />
            <Grid
                Margin="0,0,0,60"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackLayout>
                    <Label 
                        HorizontalOptions="Center" 
                        Text="Kalorie"
                        FontSize="23"
                        FontAttributes="Bold"
                        />
                    <Label 
                        HorizontalOptions="Center" 
                        Text="0.0" 
                        x:Name="caloriesLabel"
                        FontSize="18"
                        />
                </StackLayout>
                <StackLayout Grid.Column="1">
                    <Label 
                        HorizontalOptions="Center" 
                        Text="Średnia prędkość"
                        FontSize="23"
                        FontAttributes="Bold"
                        />
                    <Label 
                        HorizontalOptions="Center" 
                        Text="0.0" 
                        x:Name="averageSpeedLabel"
                        FontSize="18"
                        />
                </StackLayout>
            </Grid>
            <Label 
                HorizontalOptions="Center" 
                Text="Czas"
                FontSize="45"
                FontAttributes="Bold"
                />
            <Label 
                HorizontalOptions="Center" 
                Text="00:00:00" 
                x:Name="timeLabel"
                FontSize="35"
                />
            <ImageButton 
                Source="Resources/Images/dotnet_bot.png"
                Clicked="startToMeasure"
                HorizontalOptions="Center"
                />
        </StackLayout>
    </ContentView>

</ContentPage>
